{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "EcrAuth",
      "Effect": "Allow",
      "Action": [ "ecr:GetAuthorizationToken" ],
      "Resource": "*"
    },
    {
      "Sid": "EcrPushPullOnRepo",
      "Effect": "Allow",
      "Action": [
        "ecr:BatchCheckLayerAvailability",
        "ecr:CompleteLayerUpload",
        "ecr:UploadLayerPart",
        "ecr:InitiateLayerUpload",
        "ecr:PutImage",
        "ecr:BatchGetImage",
        "ecr:GetDownloadUrlForLayer",
        "ecr:DescribeRepositories",
        "ecr:DescribeImages",
        "ecr:ListImages"
      ],
      "Resource": "arn:aws:ecr:ap-southeast-2:382467720155:repository/lumairej-api"
    },
    {
      "Sid": "EcsUpdateService",
      "Effect": "Allow",
      "Action": [
        "ecs:UpdateService",
        "ecs:DescribeServices",
        "ecs:DescribeTasks",
        "ecs:ListTasks"
      ],
      "Resource": [
        "arn:aws:ecs:ap-southeast-2:382467720155:service/lumairej-cluster/lumairej-service",
        "arn:aws:ecs:ap-southeast-2:382467720155:cluster/lumairej-cluster"
      ]
    },
    {
      "Sid": "OptionalRegisterTD",
      "Effect": "Allow",
      "Action": [
        "ecs:RegisterTaskDefinition",
        "ecs:DeregisterTaskDefinition",
        "ecs:DescribeTaskDefinition"
      ],
      "Resource": "*"
    },
    {
      "Sid": "PassOnlyNeededRolesToEcs",
      "Effect": "Allow",
      "Action": [ "iam:PassRole" ],
      "Resource": [
        "arn:aws:iam::382467720155:role/ecsTaskExecutionRole",
        "arn:aws:iam::382467720155:role/lumairejTaskRole"
      ],
      "Condition": {
        "StringEquals": { "iam:PassedToService": "ecs-tasks.amazonaws.com" }
      }
    }
  ]
}
